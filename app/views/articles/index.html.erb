<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% collection.each do |resource| %>
      <tr>
        <td><%= resource.title %></td>
        <td><%= resource.content %></td>
        <td><%= link_to 'Show', article_path(resource) %></td>
        <td><%= link_to 'Edit', edit_article_path(resource) %></td>
        <td><%= link_to 'Destroy', article_path(resource), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
