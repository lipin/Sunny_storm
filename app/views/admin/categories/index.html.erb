<h1>Listing admin_categories</h1>

<table>
  <thead>
    <tr>
      <th>分类：</th>
      <th colspan="3">子分类：</th>
    </tr>
  </thead>

  <tbody>
    <%- collection.each do |resource| %>
      <tr>
        <td><%= resource.name %>：</td>
      <%- if resource.has_children? %>
        <%- resource.children.each do |child| %>
         <td><%= child.name %>|</td>
        <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Categorye', new_admin_category_path %>
